<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <title>Url Shortener</title>
</head>
<body>
  <div class="container">
    <h1>Url Shortener</h1>
    <div class="shorter">
      <form action="/api/url/shorturl" method="POST" class="form-inline">
        <label for="codeUrl" class="sr-only">Long Url</label>
        <input required type="url" name="codeUrl" id="codeUrl" placeholder="Url" class="form-control">
        <button type="submit" class="btn btn-success">Get Short Url</button>
      </form>
      <table class="table table-responsive table-striped">
        <thead>
          <tr>
            <th>Long Url</th>
            <th>Short Url</th>
          </tr>
        </thead>
        <tbody>
          <% allUrl.forEach(url => { %>
            <tr>
              <td><a href="<%= url.long %>"><%= url.long %></a></td>
              <td><a href="<%= url.short %>">urlshortener.com/<%= url.short %></a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>